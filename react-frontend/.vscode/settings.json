{
    "testing.openTesting": "neverOpen",
    "jest.autoClearTerminal": false,
    "jest.autoRun": {
        "watch": false,
        "onStartup?": ["all-tests"],
        "onSave?": false,
    },
    "jest.autoRevealOutput": "on-run",
    "jest.debugMode": false,
    "jest.jestCommandLine": "node --experimental-vm-modules node_modules/.bin/react-scripts test",

    "jestrunner.projectPath": "./react-frontend/",
    "jestrunner.jestCommand": "npm run test --",
    "jestrunner.debugOptions": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/react-scripts",
        "runtimeArgs": [
          "test",
          "${fileBasename}",
          "--runInBand",
          "--no-cache",
          "--watchAll=false",
          "--color"
        ]
    },
    "testing.automaticallyOpenTestResults": "neverOpen",

}
